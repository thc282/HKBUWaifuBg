{
    "name": "HKBU WaiFu",
    "version": "1.0.0",
    "description": "Changing the login background at HKBU login page ",
    "manifest_version": 3,
    "author": "thc282",
    //api host
    "host_permissions":["*://*/*"],
    "background":{"service_worker":"WaiFuBg.js"},
    "content_scripts": [
        {
            "js": ["WaiFu.js"],
            "matches": ["*://*/*"],
            //"matches": ["*://*.hkbu.edu.hk/*"],
            "run_at": "document_start"
        }
    ]
}